{
  "name": "@n6ai/verify-commit-msg",
  "version": "1.0.6",
  "license": "MIT",
  "author": "Sergej Samsonenko",
  "description": "N6 AI commit message verification for simple-git-hooks.",
  "type": "module",
  "engines": {
    "node": ">=v16.0.0"
  },
  "keywords": [
    "n6ai",
    "verify",
    "commit",
    "msg",
    "simple-git-hooks"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/main.js",
  "bin": {
    "@n6ai/verify-commit-msg": "dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --write --cache .",
    "test": "npm run test-pass",
    "test-pass": "node dist/main.js \"./commit-msg/pass\"",
    "test-fail": "node dist/main.js \"./commit-msg/fail\"",
    "clean": "rimraf dist",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^18.7.23",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx tsx src/main.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  }
}
